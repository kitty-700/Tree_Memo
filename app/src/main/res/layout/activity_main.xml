<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/now_where"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="현재 위치" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/item_list_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/divide_line_ABC"
            android:orientation="vertical">

            <ListView
                android:id="@+id/item_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>


        </LinearLayout>

        <TextView
            android:id="@+id/divide_line_ABC"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/display_memo_btn"
            android:background="#000000" />

        <Button
            android:id="@+id/display_memo_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/input_set"
            android:layout_gravity="right|top"
            android:layout_margin="3dp"
            android:background="#99daff1a"
            android:text="메모 확인" />

        <LinearLayout
            android:id="@+id/input_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/item_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="#FFF" />

            <Button
                android:id="@+id/insert_item_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#FFF"
                android:text="+" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>